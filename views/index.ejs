<%- include('partials/header'); %>
<div>
<% if (players.length > 0) { %>
    <table class="table">
        <thead class="thead">
					
            <tr>
							
                <th bgcolor="green">TYPE OF FOOD</th>
                <th bgcolor="green">NAME OF FOOD</th>
                <th bgcolor="green">AISLE</th>
                <th bgcolor="green">PRICE</th>
              <th bgcolor="green">MEMBER?</th>
							<th bgcolor="green">ACTION</th>
            </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < players.length; i++) { %>
            <tr>
                <td><%= players[i].what_food %></td>
                <td><%= players[i].food_name %></td>
                <td><%= players[i].aisle %></td>
                <td><%= players[i].price %></td>
              <td><%= players[i].member %></td>
							<td>
     <a href="/edit/<%= players[i].id %>" class="btn btn-sm btn-success">Edit</a>
 <a href="/delete/<%= players[i].id %>" class="btn btn-sm btn-danger">Delete</a>
  <a href="/deals/<%= players[i].id %>" class="btn btn-warning">Deals?</a>

							</td>
            </tr>
        <% } %>
        </tbody>
    </table>
<% } else { %>
    <p class="text-center">No food yet.</p>
<% } %>
</div>
</div>
</body>
</html>